{
  "name": "Word Cards",
  "version": "0.1",
  "description": "Collect words for learning",
  "permissions": ["storage", "activeTab"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "https://*/*"],
      "js": ["contentScript.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_page": "review.html",
  "manifest_version": 2
}
